    "firebase:deploy:beta": "firebase deploy --only hosting:beta",
    "firebase:deploy:preview": "firebase hosting:channel:deploy preview --expires 7d",
    "clean": "rm -rf .next out node_modules/.cache",
    "postinstall": "echo 'No additional postinstall steps needed'"
  },
  "dependencies": {
